<Window x:Class="MBTI.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MBTI"
        mc:Ignorable="d"
        Title="ResultWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Border BorderBrush="LightSkyBlue"  BorderThickness="2" Padding="5" Margin="20,60,20.6,70">
            <ScrollViewer>
                <TextBlock x:Name="TBResult" TextWrapping="Wrap" Text="" FontSize="14"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="Retray" Content="Пройти заново" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" FontSize="16" Padding="5" Click="Retray_Click"/>
        <Button x:Name="Restart" Content="В главное меню" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" FontSize="16" Padding="5" Click="Restart_Click"/>
        <Label HorizontalAlignment="Left" Margin="20,20,0,0" Content="Ваш результат:" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Window>


<Window x:Class="MBTI.WindowLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MBTI"
        mc:Ignorable="d"
        Title="WindowLogIn" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Center" Margin="0,0,0,150" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Center" Width="172" FontSize="16" Padding="5"/>
        <TextBox x:Name="TBPass" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Center" Width="172" FontSize="16" Padding="5"/>
        <Button x:Name="BTLogIn" HorizontalAlignment="Center" Margin="0,200,0,0" Content="Войти" VerticalAlignment="Center" Width="80" FontSize="16" Padding="5" Click="BTLogIn_Click"/>
        <Button x:Name="BTReg" HorizontalAlignment="Center" Margin="0,280,0,0" Content="Зарегистрироваться" VerticalAlignment="Center" Width="172" FontSize="16" Padding="5" Click="BTReg_Click"/>

    </Grid>
</Window>
